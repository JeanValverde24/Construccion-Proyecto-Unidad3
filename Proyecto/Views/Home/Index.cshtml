<div class="resultados-random">
    @foreach (var lugar in Model)
    {
        <div class="card lugar-card">
            <div class="carousel">
                @foreach (var imagenUrl in lugar.ImagenesUrl)
                {
                    <img src="@imagenUrl" alt="@lugar.TbNgcNombre" class="card-img">
                }
            </div>
            <div class="card-body">
                <h2>@lugar.TbNgcNombre</h2>
                @*<p>@lugar.negocio_id</p>*@
                <p><strong>Tipo de Negocio:</strong> @lugar.TipoNegocio</p>
                <p><strong>Provincia:</strong> @lugar.Provincia</p>
                <a href="@Url.Action("CargarInformacionDelNegocioUsuario", "Business", new { negocioId = lugar.negocio_id })" class="btn btn-ver-mas">Ver más</a>


                @* Verifica si el usuario es de tipo "1" para mostrar el botón *@
                @if (Convert.ToString(Session["TipoUsuario"]) == "1")
                {
                    <a href="@Url.Action("DejarFeedback", "Perfil", new { negocio_id = lugar.negocio_id })" class="btn btn-primary">Dejar Feedback</a>

                }
            </div>
        </div>
